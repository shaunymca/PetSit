<%= form_for(@visit_block, :html => { :class => "form-inline"}) do |f| %>
  <%= content_tag "div", id: "client_prices_data", data: {visit_source: current_user.client_prices} do %>
		<div class="well">
      <%= f.label :client_name %>
      <%= f.text_field :client_name, placeholder: 'Last Name', class: "input-medium search-query", data: {autocomplete_source: current_user.clients.order(:id).map(&:last_name)} %>
      <div class="controls controls-row">
        <div>
      		 &nbsp;
      	</div>
        <%= f.label :client_prices_id, 'Service Type', class: 'inline' %>
        <%= f.grouped_collection_select :client_prices_id, current_user.clients.order(:last_name), :client_prices, :last_name, :id, :visit_type,  include_blank: true %>
        <%= f.label :visit_price, 'Price', class: 'inline' %>
        <%= f.text_field :visit_price %>
        <%= f.hidden_field :visit_type %>
        
      </div>
      <div>
       &nbsp;
      </div>
      <div class="controls controls-row">
        <%= f.label :visit_date_start, "First Visit Date" %>
          <%= f.text_field :visit_date_start, :value=>Date.today.strftime('%m-%d-%Y'), :id =>"start_date" %>
          <%= f.label :visit_date_start, "Last Visit Date" %>
          <%= f.text_field :visit_date_end, :value=>Date.today.strftime('%m-%d-%Y'), :id =>"end_date", label: "Last Visit Date" %> 
      </div>
      <div class="controls controls-row">
        <div>
       &nbsp;
      	</div>
        <%= f.label :visit_time, 'Visit Time' %>
        <div class="input-append bootstrap-timepicker">
          <%= f.text_field :visit_time %>
          <span class="add-on"><i class="icon-time"></i></span>
        </div>
      </div>
      <div class="controls controls-row">
        <div>
       &nbsp;
      	</div>
        <%= f.label :monday, "Monday", class: "checkbox inline" %>
        <%= f.check_box :monday %>
        <%= f.label :tuesday, "Tuesday", class: "checkbox inline" %>
        <%= f.check_box :tuesday %>
        <%= f.label :wednesday, "Wednesday", class: "checkbox inline" %>
        <%= f.check_box :wednesday %>
        <%= f.label :thursday, "Thursday", class: "checkbox inline" %>
        <%= f.check_box :thursday %>
        <%= f.label :friday, "Friday", class: "checkbox inline" %>
        <%= f.check_box :friday %>
        <%= f.label :saturday, "Saturday", class: "checkbox inline" %>
        <%= f.check_box :saturday %>
        <%= f.label :sunday, "Sunday", class: "checkbox inline" %>
        <%= f.check_box :sunday %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: 'btn-success' %>
      </div>
		</div>
  <% end %>
<% end %>
