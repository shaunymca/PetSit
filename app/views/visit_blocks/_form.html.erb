<%= form_for(@visit_block, :html => { :class => "form-inline"}) do |f| %>
  <%= content_tag "div", id: "client_prices_data", data: {visit_source: current_user.client_prices} do %>
    <div class="well">
      <%= f.label :client_name %>
      <%= f.text_field :client_name, placeholder: 'Last Name', class: "input-medium search-query", data: {autocomplete_source: current_user.clients.order(:last_name).map(&:last_name)} %>
      <div class="controls controls-row">
        <div>
          &nbsp;
        </div>
        <%= f.label :client_prices_id, 'Service Type', class: 'inline' %>
        <%= f.grouped_collection_select :client_prices_id, current_user.clients.order(:last_name), :client_prices, :last_name, :id, :visit_type,  include_blank: true %>
        <%= f.label :visit_price, 'Price', class: 'inline' %>
        <%= f.text_field :visit_price %>
        <%= f.hidden_field :visit_type %>
        <%= f.hidden_field :client_id %>
        
      </div>
      <div>
        &nbsp;
      </div>
      <div class="controls controls-row">
        <%= f.label :american_start_date, "First Visit Date" %>
        <div class="input-append date" id="start_date">
        	<%= f.text_field :american_start_date %>
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar">
            </i>
          </span>
        </div>          
        <%= f.label :american_end_date, "Last Visit Date" %>
        <div class="input-append date" id="end_date">
	        <%= f.text_field :american_end_date %> 
          <span class="add-on">
            <i class="icon-calendar" data-time-icon="icon-time" data-date-icon="icon-calendar">
            </i>
          </span>
        </div>     
      </div>
      <div class="controls controls-row">
        <div>
          &nbsp;
        </div>
        <%= f.label :time_text, 'Visit Time' %>
        <div class="input-append bootstrap-timepicker">
          <%= f.text_field :time_text, :ignore_date => true%>
          <span class="add-on"><i class="icon-time"></i></span>
        </div>
      </div>
      <div class="controls controls-row">
        <div>
          &nbsp;
        </div>
        <%= f.label :monday, "Monday", class: "checkbox inline" %>
        <%= f.check_box :monday %>
        <%= f.label :tuesday, "Tuesday", class: "checkbox inline" %>
        <%= f.check_box :tuesday %>
        <%= f.label :wednesday, "Wednesday", class: "checkbox inline" %>
        <%= f.check_box :wednesday %>
        <%= f.label :thursday, "Thursday", class: "checkbox inline" %>
        <%= f.check_box :thursday %>
        <%= f.label :friday, "Friday", class: "checkbox inline" %>
        <%= f.check_box :friday %>
        <%= f.label :saturday, "Saturday", class: "checkbox inline" %>
        <%= f.check_box :saturday %>
        <%= f.label :sunday, "Sunday", class: "checkbox inline" %>
        <%= f.check_box :sunday %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: 'btn-success' %>
      </div>
    </div>
  <% end %>
<% end %>
