<div class='well span11'>

 <% if @invoice.paid == false %>
    <%= simple_form_for(@invoice) do |f| %>
      <%= f.input :paid %>
      <%= f.button :submit %>
    <% end %>
  <% else %>
  <H2>PAID</H2>
  <H1><%= @invoice.company_name %><H1>
  <% end %>
  
  <H3><%= @invoice.client_name %> | Invoice # <%= @invoice.id %></H3>
  <p><%= link_to "Printable Invoice (PDF)", invoice_path(@invoice, format: "pdf"), :target => "_blank" %></p>
  
  <div class="span6">
    <div class="row">
        <div class="span5">
          <table class="table table-hover">
            <thead>
              <th>Visit Type</th>
              <th>Price per Visit</th>
              <th>Number of Visits</th>
              <th>Total</th>
            </thead>
            <tbody>
            <% @visits.each do |visit| %>
              <tr>
                <td><%= visit.vtype %></td>
                <td>$<%= visit.vprice.to_i.floor %></td>
                <td><%= visit.count %></td>
                <td>$<%= visit.total %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
  <div class='span3'>
    <% if @invoice.paid != true %>
      <H3>Total Amount Due: $<%= @invoice.total_price %></H3>
    <% else %>
      <H3>Amount Paid: $<%= @invoice.total_price %></H3>
    <% end %>
  </div>
  <div class='span12'>
    <%= link_to 'Edit', edit_invoice_path(@invoice) %> |
    <%= link_to 'Back', invoices_path %>
  </div>
</div>