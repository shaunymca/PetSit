<div class="well">
  <%= simple_form_for(@invoice) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.association :client, label_method: :full_name %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.input :due_date %>
      <%= f.input :paid %>
      <%= f.input :user_id %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>