<h1>Listing visits</h1>



<% @visits.each do |visit| %>
  <% if visit.future_visit %>
  <%= simple_form_for visit do |f| %>
  	<div class="controls controls-row">
      <div class='span10'>
        <%= f.input :visit_type, disabled: true, :wrapper_html => { :class => 'span1' } %>
        <%= f.input :visit_date, as: :string, :wrapper_html => { :class => 'span2' } %>
        <%= f.input :visit_price, :wrapper => :prepend, :wrapper_html => { :class => 'span1' }, :label => "Price" do %> %>
        <%= content_tag :span, "$", :class => "btn btn-success add-on disabled" %>
        <%= f.input_field :visit_price %>
        <%= f.button :submit, :class => 'btn btn-danger', :wrapper_html => { :class => 'span1 pull-left', :method => :delete } %>
        <% end %>
      </div>
    </div>
  <% end %>		

  <% else %>
  <% end %>
<% end %>

<br />

<%= link_to 'New Visit', new_visit_path %>
