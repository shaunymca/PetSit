<p id="notice"><%= notice %></p>
<h1><%= @client.first_name%> <%= @client.last_name %></h1>
<div class="well">
  <h3>Client Information</h3>
  <div class="container-fluid">
    <div class="row-fluid">
			<div class= "span5" >
        <div>
          <b>Email:</b>
          <%= @client.email %>
        </div>
        <div>
	        <b>Address 1:</b>
  	      <%= @client.address_1 %>
        </div>
        <div>
          <b>Address 2:</b>
          <%= @client.address_2 %>
        </div>
        <div>
          <b>City:</b>
          <%= @client.city %>
        </div>
        <div>
          <b>State:</b>
          <%= @client.state %>
        </div>
        <div>
          <b>Zip:</b>
          <%= @client.zip %>
        </div>
        <div class="visible-phone">
          <br>
          	<%= link_to 'View on Map <i class="icon-map-marker"></i>'.html_safe, "https://maps.google.com/maps?q=#{@client.address_1}+#{@client.address_2}+#{@client.city}+#{@client.state}", class: "btn btn-info", :target => "_blank" %>
        </div>  
      </div>
			<div class="span5 hidden-phone">
        <div class="row-fluid">
          <div class="span5">
					<%= gmaps("map_options" => {:container_class => "map_container_renamed", "zoom" => 15, "auto_zoom" => false},"markers" => { "data" => @json }) %>
          </div>
      	</div>
      </div>
    </div>
  </div>
</div>
<div class="row">
	<div class="span9">
    <%= link_to 'Edit <i class="icon-pencil icon-white"></i>'.html_safe, edit_client_path(@client), class: "btn btn-success"%> |
    <%= link_to 'New Client <i class="icon-plus icon-white"></i>'.html_safe, new_client_path, class: "btn btn-primary" %> |
    <%= link_to 'Clients <i class="icon-group icon-white"></i>'.html_safe, clients_path, class: "btn" %> 
  </div>
</div>
<div class='well'>
  <h3>Client Pricing</h3>
  <%= simple_nested_form_for @client do |f| %>
  <%= f.fields_for :client_prices do |def_price_form| %>
  <div class="controls controls-row">
    <div class='span10'>
      <% if def_price_form.object.custom == true  %>
        <% if def_price_form.object.default_price_id.nil? %>
      		<%= def_price_form.input :custom, disabled: true, :wrapper_html => { :class => 'span1' } %>
        <% else %>
          <%= def_price_form.input :custom, :wrapper_html => { :class => 'span1' } %>
        <% end %>
        <%= def_price_form.input :visit_type, :wrapper_html => { :class => 'span2' } %>
        <%= def_price_form.input :price, disabled: true, :wrapper => :prepend, :wrapper_html => { :class => 'span2' }, :label => "Price" do %>
          <%= content_tag :span, "$", :class => "add-on" %>
          <%= def_price_form.input_field :price %>
        <%= def_price_form.link_to_remove '<i class="icon-remove"></i>'.html_safe, :class => 'btn btn-danger', :wrapper_html => { :class => 'span3 pull-left' } %>
          <%end%>
      <% else %>
        <%= def_price_form.input :custom, :hidden => false, :wrapper_html => { :class => 'span1' } %>
        <%= def_price_form.input :visit_type, disabled: true, :wrapper_html => { :class => 'span2' } %>
        <%= def_price_form.input :price, disabled: :custom, :wrapper => :prepend, :wrapper_html => { :class => 'span2' }, :label => "Price" do %>
          <%= content_tag :span, "$", :class => "add-on" %>
          <%= def_price_form.input_field :price, disabled: true %>
          <%end%>
      <%end%>
    </div>
  </div>
  <% end %>
  <%= f.link_to_add "Add a custom price", :client_prices, :class => 'btn btn-success' %>
  <p>&nbsp;</p>
  <div class="controls">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
  <% end %>
</div>