<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-horizontal">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.input :active, :input_html => { :checked => true } %>
    <div class="controls">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
